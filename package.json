{
  "name": "next-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.8.0",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "storybook": "storybook dev -p 6007",
    "build-storybook": "storybook build",
    "storycap": "storycap --serverCmd \"pnpm dlx http-server storybook-static -p 6006\" http://localhost:6006",
    "storycap:ci": "storycap http://localhost:6006 --outDir __screenshots__ --serverTimeout 60000 --delay 1000",
    "ci:screenshot": "pnpm build-storybook && pnpm storycap:ci",
    "test:vrt": "reg-suit run",
    "vrt:local": "pnpm ci:screenshot && reg-cli __screenshots__ __screenshots__/expected __screenshots__/diff -R ./vrt-report.html",
    "vrt:update-baseline": "pnpm ci:screenshot && cp -r __screenshots__ __screenshots__/expected",
    "vrt:clean": "rm -rf __screenshots__/diff __screenshots__/actual .vrt-reports .vrt-artifacts",
    "vrt:serve-report": "pnpm dlx http-server .vrt-reports -p 8080 -o",
    "vrt:debug": "DEBUG=storycap* pnpm ci:screenshot"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^15.3.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/functions": "^2.0.1",
    "@vercel/speed-insights": "^1.2.0",
    "next": "15.3.1",
    "puppeteer": "^24.9.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "reg-publish-filesystem-plugin": "^0.2.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/nextjs": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "reg-keygen-git-hash-plugin": "^0.14.3",
    "reg-notify-github-plugin": "^0.14.4",
    "reg-suit": "^0.14.4",
    "storybook": "^8.6.14",
    "storycap": "^5.0.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
